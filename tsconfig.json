{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "jest"],
    "lib": ["es2022", "dom"],
    "verbatimModuleSyntax": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.d.ts", "./test/e2e/snippets.ts"],
  "exclude": ["src/stories/**/*"]
}
